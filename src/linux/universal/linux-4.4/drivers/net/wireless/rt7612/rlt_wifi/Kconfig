menu "WiFi Operation Modes"
    choice
        prompt "Main Mode"
        default WIFI_MODE_AP

        config WIFI_MODE_AP
                bool "AP"

        config WIFI_MODE_STA
                bool "STA"

        config WIFI_MODE_BOTH
                bool "APSTA"
    endchoice

    if WIFI_MODE_AP || WIFI_MODE_BOTH
        source "drivers/net/wireless/rt7612/rlt_wifi_ap/Kconfig"
    endif

    #if WIFI_MODE_STA || WIFI_MODE_BOTH
     #   source "drivers/net/wireless/rt7612/rlt_wifi_sta/Kconfig"
    #endif
endmenu	

